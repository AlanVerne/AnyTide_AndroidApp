<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avaa.balitidewidget.ChoosePortFragment"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:id="@+id/llSearchScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="#ffffffff"
        android:elevation="4dp"
        >

        <LinearLayout
            android:id="@+id/llSearchBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:background="#ffffffff"
            android:elevation="6dp"
            >
            <FrameLayout
                android:id="@+id/btnCloseSearch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="4dp"
                android:textColor="#ffffff"
                android:clickable="true"
                >
                <ImageView
                    android:src ="@drawable/ic_arrow_back_black_24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <com.avaa.balitidewidget.views.ExtendedEditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/search_for"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textIsSelectable="true"
                android:gravity="center_vertical|left"
                android:background="@android:color/transparent"
                />
            <FrameLayout
                android:id="@+id/btnClearSearch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:minWidth="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="4dp"
                android:textColor="#ffffff"
                android:clickable="true"
                android:visibility="gone"
                >
                <ImageView
                    android:src ="@drawable/ic_clear_black_24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/lvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
        </ListView>
    </LinearLayout>

</FrameLayout>
